                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": ["user"],
                "summary": "Add a new user",
                "operationId": "addUser",
                "requestBody": {
                    "description": "User object that needs to be added",
                    "content": {
                        "application/json": {
                            "schema": {
